@model CreateOfferDiscountDto
@{
    ViewData["Title"] = "CreateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklifi Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <div class="form-group">
                            <label>Kategori Seçimi</label>
                            <select asp-for="CategoryID" class="form-control">
                                <option value="">Kategori Seçiniz</option>
                                @foreach (var category in ViewBag.CategoryDictionary)
                                {
                                    <option value="@category.Key">@category.Value</option>
                                }
                            </select>
                        </div>
                        <br />

                        <label>İndirim Teklifi Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />

                        <label>İndirim Teklifi Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />

                        <label>İndirim Teklifi Görsel</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />

                        <label>İndirim Teklifi Buton Başlığı</label>
                        <input type="text" class="form-control" asp-for="ButtonTitle" />
                        <br />

                        <button class="btn btn-primary">İndirim Teklifini Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>