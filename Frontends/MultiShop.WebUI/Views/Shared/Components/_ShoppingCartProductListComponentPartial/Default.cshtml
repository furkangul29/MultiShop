<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Toplam</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model)
            {
                <tr data-product-id="@item.ProductId">
                    <td class="align-middle">
                        <img src="@item.ProductImageUrl" alt="" style="width: 50px; height:60px;">
                        @item.ProductName
                    </td>
                    <td class="align-middle unit-price">@item.Price.ToString("0.00 ₺")</td>
                    <td class="align-middle">
                        <div class="input-group quantity mx-auto" style="width: 100px;">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-minus" data-product-id="@item.ProductId" data-input-id="quantity-@item.ProductId" data-change="-1">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="number" id="quantity-@item.ProductId" class="form-control form-control-sm bg-secondary border-0 text-center quantity" readonly
                                   value="@item.Quantity" data-initial-quantity="@item.Quantity" min="1">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-plus" data-product-id="@item.ProductId" data-input-id="quantity-@item.ProductId" data-change="1">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td class="align-middle total-price">@(item.Quantity * item.Price).ToString("0.00 ₺")</td>
                    <td class="align-middle">
                        <a href="javascript:void(0)" onclick="confirmRemove('@item.ProductId')" class="btn btn-sm btn-danger">
                            <i class="fa fa-times"></i>
                        </a>
                    </td>
                </tr>
            }
    </table>
</div>