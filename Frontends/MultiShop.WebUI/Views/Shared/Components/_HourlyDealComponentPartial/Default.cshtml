@model List<ResultHourlyDealDto>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 py-8">
    @foreach (var deal in Model)
    {
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="relative">
                <img src="@deal.ProductImageUrl" alt="@deal.ProductName" class="w-full h-64 object-cover object-center transition duration-300 hover:opacity-90">
                <div class="absolute top-4 left-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-white px-4 py-1 rounded-full text-sm font-medium shadow-lg">
                    %@deal.DiscountPercentage İndirim
                </div>
            </div>

            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-3 hover:text-blue-600 transition duration-300">@deal.ProductName</h3>
                <p class="text-sm text-gray-500 mb-4">@deal.CategoryName</p>

                <div class="flex items-center justify-between">
                    <div class="flex flex-col">
                        <span class="text-2xl font-extrabold text-red-600">@deal.DiscountedPrice.ToString("N2") ₺</span>
                        <span class="text-sm text-gray-400 line-through">@deal.OriginalPrice.ToString("N2") ₺</span>
                    </div>
                    <button class="bg-blue-500 hover:bg-blue-600 text-white px-5 py-2 rounded-lg shadow-md font-medium transition duration-300 transform hover:scale-105">
                        Sepete Ekle
                    </button>
                </div>
            </div>
        </div>
    }
</div>
